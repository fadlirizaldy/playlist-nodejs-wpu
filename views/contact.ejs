<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data</a>

            <% if (msg.length != 0) { %>
              <div class="alert alert-success mt-3" role="alert">
                <%= msg %> 
              </div>
            <% } %>

            <% if (contacts.length === 0) { %>
              <div class="alert alert-danger fw-bold" role="alert">
                Belum ada data contact
              </div>
            <% } else { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% contacts.forEach((e,i) => {i++ %>
                    <tr>
                      <th scope="row"><%= i %> </th>
                      <td><%= e.nama %></td>
                      <td><%= e.nohp %></td>
                      <td>
                          <a href="/contact/<%= e.nama %> " class="btn btn-success badge rounded-pill "><i class="bi bi-info-circle"></i> Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } %>
        </div>
    </div>
</div>
