<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>
            <% if(typeof errors != 'undefined') { %> 
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <ul>
                      <% errors.forEach(error => { %>
                          <li><%= error.msg %> </li>
                      <% }) %>
                  </ul>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% } %> 
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" aria-describedby="emailHelp" name="nama" required value="<%= contact.nama %>">                
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">Nomor Handphone</label>
                  <input type="text" class="form-control" id="nohp" aria-describedby="emailHelp" name="nohp" required value="<%= contact.nohp %>">                
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required value="<%= contact.email %>">                
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
        </div>
    </div>
</div>